<div class="container">
	<h3>Users</h3>
	<table class="table">

		<tr>
			<th>User Id</th>
			<th>Name</th>
			<th>Role</th>
			<th>Email</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

		<% _.each(users, function(user) { %>
		<tr data-id="<%= user.userId %>" data-model="user">
			<td><%= user.userId %></td>
			<td><%= user.name %></td>
			<td><%= user.role %></td>
			<td><%= user.email %></td>
			<td><a href="/user/show/<%= user.userId %>" class="btn btn-sm btn-primary">Show</a></td>
			<td><a href="/user/edit/<%= user.userId %>" class="btn btn-sm btn-warning">Edit</a></td>
			<td>
				<form action="/user/destroy/<%=user.userId %>" method="POST">
					<input type="hidden" name="_method" value="delete" />
					<input type="submit" class="btn btn-sm btn-danger" value="Delete" />
					<input type="hidden" name="_csrf" value="<%= _csrf %>" />
				</form>
			</td>
		</tr>
		<% }) %>

	</table>
</div>